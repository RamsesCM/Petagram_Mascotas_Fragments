<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.FragmentMiMascota">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imgViewMiMascota"
            android:layout_width="@dimen/roundedImg"
            android:layout_height="@dimen/roundedImg"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/margin_app"
            app:shapeAppearanceOverlay="@style/rounderImageView"
            android:src="@drawable/p1"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/tvMiMascota"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chimuelo"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/nombreMascota"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvMiMascota"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/miActionBar"/>

    </LinearLayout>

</FrameLayout>